class Eletrodomestico:

    def __init__(self):
        self.ligado = False

    def ligar_desligar(self):
        if self.ligado == True:
            self.ligado = False
        else:
            self.ligado = True

    def imprimir(self):
        print(self.__dict__)
    
class Televisao(Eletrodomestico):

